# Environment (dev|staging|production)
APP_ENV=development

# Server
HOST=0.0.0.0
PORT=3001
TRUST_PROXY=true

# Logging
# For production, JSON logs are recommended.
LOG_LEVEL=INFO
LOG_FORMAT=auto

# CORS (comma-separated)
ALLOWED_ORIGINS=http://localhost:3000
ALLOWED_HEADERS=Content-Type,Authorization,X-Requested-With
ALLOWED_METHODS=GET,POST,PUT,DELETE,PATCH,OPTIONS
CORS_MAX_AGE=3600

# URLs (used for redirects and cross-service references)
SITE_URL=http://localhost:3000
BACKEND_URL=http://localhost:3001
FRONTEND_URL=http://localhost:3000
WS_URL=ws://localhost:3001/ws

# Database (MongoDB)
# NOTE: In production, provide credentials and enable TLS as appropriate.
MONGODB_URI=mongodb://username:password@host:27017
MONGODB_DBNAME=lms
MONGODB_TLS=false

# Misc placeholders
REQUEST_TIMEOUT_MS=30000
RATE_LIMIT_WINDOW_S=60
RATE_LIMIT_MAX=100
COOKIE_DOMAIN=localhost
